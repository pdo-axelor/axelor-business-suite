<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<grid name="timesheet-grid" title="Timesheet" model="com.axelor.apps.hr.db.Timesheet" canNew="false" groupBy="user" orderBy="user,-fromDate">
		<toolbar>
			<button name="seeTSLines" title="See timesheet lines" onClick="action-timesheet-method-timesheet-line-historic" />
		</toolbar>
		<hilite color="danger" if="statusSelect == 4"/>
		<hilite color="success" if="statusSelect == 3"/>
		<hilite color="warning" if="statusSelect == 2"/>
		<field name="company" form-view="company-form" grid-view="company-grid"/>
		<field name="fromDate"/>
		<field name="toDate"/>
		<field name="sentDate"/>
		<field name="statusSelect"/>
		<field name="user" form-view="user-form" grid-view="user-grid"/>
	</grid>
	
	<grid name="my-timesheets-grid" title="My Timesheets" model="com.axelor.apps.hr.db.Timesheet" canNew="false" orderBy="-fromDate">
		<toolbar>
			<button name="seeTSLines" title="See timesheet lines" onClick="action-timesheet-see-timesheet-lines" />
		</toolbar>
		<hilite color="danger" if="statusSelect == 4"/>
		<hilite color="success" if="statusSelect == 3"/>
		<hilite color="warning" if="statusSelect == 2"/>
		<field name="company" form-view="company-form" grid-view="company-grid"/>
		<field name="fromDate"/>
		<field name="toDate"/>
		<field name="sentDate"/>
		<field name="statusSelect"/>
	</grid>
	
	<grid name="timesheet-validate-grid" title="Timesheet" model="com.axelor.apps.hr.db.Timesheet" canNew="false" orderBy="user,-fromDate">
		<toolbar>
			<button name="showSubordinateTimesheetToValidate" title="Show timesheets to be validated by my subordinates" onClick="com.axelor.apps.hr.web.timesheet.TimesheetController:showSubordinateTimesheets"/>
			<button name="seeTSLines" title="See timesheet lines" onClick="action-timesheet-method-timesheet-line-validate" />
		</toolbar>
		<hilite background="danger" if="$moment(fromDate).diff(todayDate,'days') &lt;= 0"/>
  		<hilite background="warning" if="$moment(todayDate).diff(sentDate,'days') &gt;= 7 || $moment(todayDate).diff(fromDate,'days') &gt;= 15"/> 
		<field name="company" form-view="company-form" grid-view="company-grid"/>
		<field name="fromDate"/>
		<field name="toDate"/>
		<field name="sentDate"/>
		<field name="statusSelect"/>
		<field name="user" form-view="user-form" grid-view="user-grid"/>
	</grid>

	<form name="timesheet-form" title="Timesheet" model="com.axelor.apps.hr.db.Timesheet" cols="12" width="large"
	    onNew="action-group-timesheet-onnew"
	    onLoad="action-timesheet-group-onload" canNew="false"
	    onSave="action-timesheet-group-onsave" canCopy="false">
	    <toolbar>
	    	<button name="printTimesheet" title="Print" colSpan="2" icon="fa-print" onClick="save,action-print-timesheet"/>
	    </toolbar>
	    <menubar>
	    	<menu title="Tools">
	    		<item title="Get time from Tasks" showIf="statusSelect == 1" action="action-timesheet-validate-tasks,save,com.axelor.apps.hr.web.timesheet.TimesheetController:getTimeFromTask"/>
	    		<item title="Generate Lines Automatically" showIf="statusSelect == 1" action="action-timesheet-record-default-generation-date,action-timesheet-attrs-set-log-time-title,action-timesheet-attrs-generale-lines-panel-hidden-false"/>
	    	</menu>
	    </menubar>
    	<panel name="head">
		    <field name="statusSelect" colSpan="10" widget="NavSelect" showTitle="false"/>
		    <field name="showEditor" colSpan="2" title="Editor" widget="boolean-switch" onChange="action-timesheet-attrs-refresh-editor" if="__config__.app.getApp('timesheet').getTimesheetEditor()"/>
		</panel>
		<panel>
			<field name="fromDate" onChange="action-timesheet-validate-fromDate,action-timesheet-record-to-date"/>
			<field name="toDate" onChange="action-timesheet-validate-toDate"/>
			<button name="create" title="Create" colSpan="2" hideIf="id" onClick="save,action-timesheet-set-show-editor,action-timesheet-attrs-refresh-editor,action-timesheet-attrs-panels,save" />
		</panel>
	    <panel name="actions" sidebar="true" stacked="true">
	    	<button name="confirmButton" onClick="action-timesheet-group-confirm" title="Confirm" hideIf="statusSelect &gt; 1" icon="fa-check-square-o"/>
            <button name="continueButton" onClick="action-timesheet-group-continue,close" title="Continue" showIf="statusSelect == 2 &amp;&amp; user != null &amp;&amp; user.code == $user" icon="fa-arrow-right"/>
	    	<button name="confirmContinueButton" onClick="action-timesheet-group-confirm-continue,close" title="Confirm &amp; Continue" hideIf="statusSelect &gt; 1" icon="fa-check-square-o"/>
	    	<button name="validateButton" onClick="action-timesheet-group-validate" title="Validate" icon="fa-check" css="btn-success"/>
	    	<button name="refuseButton" onClick="action-timesheet-group-refuse" title="Refuse" icon="fa-times" css="btn-danger" />
	    	<button name="cancelButton" onClick="save,action-timesheet-method-cancel,action-timesheet-attrs-buttons" title="Cancel" icon="fa-close" css="btn-danger"/>
	    	<button name="draftButton" onClick="action-timesheet-record-draft,save,action-timesheet-attrs-buttons" title="Return to draft status" showIf="statusSelect &gt; 3 "/>
	    	<button name="startStopForm" title="Start&amp;Stop Timer" onClick="action-timesheet-method-timesheet-timer" hideIf="statusSelect != 1"
			    if="__config__.app.isApp('timesheet') &amp;&amp; __config__.app.getApp('timesheet').getEnableTimer()"/>
	    </panel>
	    <panel sidebar="true" stacked="true">
		    <panel>
				<field name="company" colSpan="6" form-view="company-form" grid-view="company-grid" onChange="action-hr-record-empty-user"/>
				<field name="user" colSpan="6" form-view="user-form" onSelect="action-hr-attrs-set-user-domain" grid-view="user-grid" canNew="false" canEdit="false" canView="false"/>
				<field name="user.employee" hidden="true" />
				<field if-module="axelor-business-production" if=" __config__.app.getApp('production')?.getManageBusinessProduction()" name="user.employee.timesheetImputationSelect" hidden="true"/>
		    </panel>
	    </panel>
		<panel name="generateLinesPanel" title="Generate Lines automatically" hidden="true">
		    <field name="$fromGenerationDate" title="From generation date" widget="Date"/>
			<field name="$toGenerationDate" title="To generation date" widget="Date"/>
			<field name="$project" title="Project" target="com.axelor.apps.project.db.Project" domain="self.imputable=true and self." type="many-to-one" form-view="project-form" grid-view="project-grid" onSelect="action-hr-timesheet-attrs-domain-project" onChange="action-hr-timesheet-record-empty-product"/>
			<field name="$product" title="Activity" type="many-to-one" target="com.axelor.apps.base.db.Product" Select="action-hr-timesheet-attrs-domain-product" onSelect="action-hr-timesheet-attrs-domain-product" widget="SuggestBox" form-view="product-form" grid-view="product-grid"/>
			<field name="$logTime" type="decimal"/>
			<button name="generateLines" title="Generate lines" onClick="com.axelor.apps.hr.web.timesheet.TimesheetController:generateLines,action-timesheet-attrs-generale-lines-panel-hidden-true,save,action-timesheet-attrs-refresh-editor"/>
		</panel>
		<panel sidebar="true" name="totals" title="Totals on period">
			<field name="periodTotal" readonly="true"/>
			<field name="$periodTotalConvert" readonly="true" hidden="true"/>
		</panel>
		<panel name="lines">
			<panel-dashlet name="timesheetLineEditor" colSpan="12" action="action-timesheet-show-timesheet-line-editor" showIf="showEditor" height="365"/>
			<panel-related field="timesheetLineList"  colSpan="12" height="20" grid-view="timesheet-line-timesheet-grid" editable="true" form-view="timesheet-line-timesheet-form" hidden="true" showIf="!showEditor &amp;&amp; !$readonly() &amp;&amp; !($enableTimesheetManufOrder &amp;&amp; user.employee.timesheetImputationSelect == 2)" x-can-copy="true" onChange="action-timesheet-method-timesheet-compute-period-total"/>
			<panel-related field="timesheetLineList"  colSpan="12" height="20" grid-view="timesheet-line-timesheet-manuf-order-grid" editable="true" form-view="timesheet-line-timesheet-manuf-order-form" hidden="true" showIf="!showEditor &amp;&amp; !$readonly() &amp;&amp; $enableTimesheetManufOrder &amp;&amp; user.employee.timesheetImputationSelect == 2" x-can-copy="true" onChange="action-timesheet-method-timesheet-compute-period-total" if-module="axelor-business-production" if=" __config__.app.getApp('production')?.getManageBusinessProduction()"/>
			<panel-related field="timesheetLineList" colSpan="12" height="20" grid-view="timesheet-line-timesheet-readonly-grid" form-view="timesheet-line-timesheet-form" hidden="true" showIf="!showEditor &amp;&amp; $readonly() &amp;&amp; !($enableTimesheetManufOrder &amp;&amp; user.employee.timesheetImputationSelect == 2)" x-can-copy="true" />
			<panel-related field="timesheetLineList" colSpan="12" height="20" grid-view="timesheet-line-timesheet-readonly-manuf-order-grid" form-view="timesheet-line-timesheet-manuf-order-form" hidden="true" showIf="!showEditor &amp;&amp; $readonly() &amp;&amp; $enableTimesheetManufOrder &amp;&amp; user.employee.timesheetImputationSelect == 2" x-can-copy="true" if-module="axelor-business-production" if=" __config__.app.getApp('production')?.getManageBusinessProduction()"/>
			<button name="fullScreenEditor" colSpan="3" title="Fullscreen Editor" showIf="id != null &amp;&amp; showEditor" if="__config__.app.getApp('timesheet').getTimesheetEditor()" onClick="action-timesheet-method-open-timesheet-editor"/>
			<field name="$showActivity" hidden="true" type="boolean"/>
			<field name="$enableTimesheetManufOrder" hidden="true" type="boolean"/>
		</panel>
		<panel-dashlet name="panelDashboard" title="Total Hours per Day" showIf="id" action="action-timesheet-view-total-hours-per-day"/>
		<panel showIf="sentDate != null" sidebar="true" stacked="true">
		 	<field name="sentDate"/>
			<field name="validatedBy" canEdit="false" form-view="user-form" grid-view="user-grid" showIf="validatedBy != null"/>
			<field name="refusedBy"  canEdit="false"  form-view="user-form" grid-view="user-grid" showIf="refusedBy != null"/>
			<field name="validationDate" showIf="validationDate != null"/>
			<field name="refusalDate" showIf="refusalDate != null"/>
			<field name="groundForRefusal" showIf="statusSelect == 4" colSpan="12"/>
		</panel>
		<panel>
			<field name="attrs" colSpan="12" />
		</panel>
		<panel-mail>
		  <mail-messages limit="4" />
		  <mail-followers />
	    </panel-mail>
	</form>
	
	<form name="popup-timesheet-refusal-form" title="Ground for refusal" model="com.axelor.apps.hr.db.Timesheet">
		<field name="groundForRefusal" showTitle="false"/>
	</form>
	
	<form name="popup-timesheet-form" title="Select the timesheet you want to edit" model="com.axelor.apps.base.db.Wizard" onNew="action-timesheet-attrs-domain-timesheet-select">
		<field name="$timesheetSelect" title="Select Timesheet" type="many-to-one" target="com.axelor.apps.hr.db.Timesheet" widget="SuggestBox" />
		<button name="editTimesheetSelected" title="Edit Timesheet Selected" onClick="action-timesheet-validate-timesheet-selected,action-timesheet-method-edit-timesheet-selected,close"/>
	</form>

	<action-group name="action-timesheet-group-onsave">
		<action name="action-timesheet-validate-toDate"/>
		<action name="action-timesheet-attrs-refresh-editor"/>
		<action name="action-timesheet-attrs-panels"/>
		<action name="action-timesheet-method-timesheet-compute-period-total"/>
	</action-group>

	<action-group name="action-timesheet-group-onload">
		<action name="action-timesheet-method-set-show-activity"/>
		<action name="action-timesheet-attrs-enable-timesheet-manuforder" if="__config__.app.getApp('production')?.getManageBusinessProduction()"/>
		<action name="action-timesheet-attrs-buttons"/>
		<action name="action-timesheet-attrs-set-visible-duration-title"/>
		<action name="action-timesheet-method-set-visible-duration"/>
		<action  name="action-timesheet-attrs-title-project" />
		<action name="action-timesheet-attrs-from-date"/>
		<action name="action-timesheet-method-timesheet-compute-period-total"/>
		<action name="save"/>
	</action-group>
	
	<action-attrs name="action-hr-timesheet-attrs-domain-product">
		<attribute name="domain" expr="eval:$project == null || __repo__(Project).find($project.id).productSet?.empty ? &quot;self.isActivity = true&quot; : &quot;self.isActivity = true AND EXISTS(SELECT p FROM Project p WHERE p = :$project AND self MEMBER OF p.productSet)&quot;" for="$product"/>
	</action-attrs>

	<action-group name="action-timesheet-group-confirm">
		<action name="save"/>
		<action name="action-timesheet-method-confirm"/>
		<action name="action-timesheet-attrs-buttons"/>
		<action name="action-timesheet-method-timesheet-compute-period-total"/>
		<action name="save"/>
	</action-group>

    <action-group name="action-timesheet-group-continue">
        <action name="save"/>
        <action name="action-timesheet-method-continue"/>
        <action name="action-timesheet-attrs-buttons"/>
		<action name="action-timesheet-method-timesheet-compute-period-total"/>
        <action name="save"/>
    </action-group>

	<action-group name="action-timesheet-group-confirm-continue">
		<action name="save"/>
		<action name="action-timesheet-method-confirm-continue"/>
		<action name="action-timesheet-attrs-buttons"/>
		<action name="action-timesheet-method-timesheet-compute-period-total"/>
		<action name="save"/>
	</action-group>
	
	<action-group name="action-timesheet-group-validate">
		<action name="save"/>
		<action name="action-timesheet-method-valid"/>
		<action name="action-timesheet-attrs-buttons"/>
		<action name="action-timesheet-method-timesheet-compute-period-total"/>
		<action name="save"/>
	</action-group>
	
	<action-group name="action-timesheet-group-refuse">
		<action name="save"/>
		<action name="action-timesheet-method-refuse"/>
		<action name="action-timesheet-refusal-popup-form"/>
		<action name="action-timesheet-attrs-buttons"/>
		<action name="action-timesheet-method-timesheet-compute-period-total"/>
		<action name="save"/>
	</action-group>
	
	<action-group name="action-group-timesheet-onnew">
		<action name="action-timesheet-record-default"/>
		<action name="action-timesheet-method-set-show-activity" />
		<action name="action-timesheet-attrs-enable-timesheet-manuforder" if="__config__.app.getApp('production')?.getManageBusinessProduction()"/>
		<action name="action-timesheet-attrs-buttons"/>
		<action name="action-timesheet-attrs-set-visible-duration-title"/>
		<action name="action-timesheet-record-from-period-date"/>
		<action name="action-timesheet-record-to-date" if="fromDate != null"/>
		<action name="action-timesheet-attrs-title-project"/>
		<action name="action-timesheet-attrs-from-date-on-new"/>
		<action name="action-timesheet-attrs-panels"/>
	</action-group>


	<action-method name="action-timesheet-method-timesheet-compute-period-total">
		<call class="com.axelor.apps.hr.web.timesheet.TimesheetController" method="timesheetPeriodTotalController"/>
	</action-method>
	
	<action-record name="action-timesheet-record-default" model="com.axelor.apps.hr.db.Timesheet">
	    <field name="user" expr="eval:__user__"/>
	    <field name="company" expr="eval: __user__.employee?.mainEmploymentContract?.payCompany ?: __user__.activeCompany"/>
	</action-record>

	<action-record name="action-timesheet-record-draft" model="com.axelor.apps.hr.db.Timesheet">
	    <field name="statusSelect" expr="1"/>
	</action-record>

	<action-record name="action-hr-timesheet-record-empty-product" model="com.axelor.apps.hr.db.Timesheet">
		<field name="$product" expr="eval:null" if="!$project?.productSet?.contains(product)"/>
	</action-record>
	
	<action-record name="action-timesheet-record-default-generation-date" model="com.axelor.apps.hr.db.Timesheet">
	    <field name="$fromGenerationDate" expr="eval:fromDate"/>
	    <field name="$toGenerationDate" expr="eval:toDate" if="toDate != null"/>
	</action-record>

	<action-record name="action-timesheet-record-to-date" model="com.axelor.apps.hr.db.Timesheet">
		<field name="toDate" expr="eval:fromDate.with(java.time.DayOfWeek.FRIDAY)" if="toDate == null &amp;&amp; fromDate != null &amp;&amp;  __config__.app.getApp('timesheet').getDefaultEndFormat() == 1"/>
		<field name="toDate" expr="eval:fromDate.withDayOfMonth(fromDate.lengthOfMonth())" if="toDate == null &amp;&amp; fromDate != null &amp;&amp;  __config__.app.getApp('timesheet').getDefaultEndFormat() == 2"/>
	</action-record>

	<action-validate name="action-timesheet-validate-tasks">
		<error message="No log time found or all log times already added" if="__repo__(TimesheetLine).all().filter('self.user = ?1 AND self.timesheet = null',__user__).fetchOne() == null"/>
	</action-validate>
	
	<action-validate name="action-timesheet-validate-timesheet-selected">
		<error message="You have to choose at least one timesheet" if="timesheetSelect == null"/>
	</action-validate>
	
	<action-validate name="action-timesheet-validate-toDate">
		<error message="Invalid date" if="(toDate != null &amp;&amp; toDate &lt; fromDate) || (toDate != null &amp;&amp; toDate &gt; __date__)" action="action-timesheet-null-toDate"/>
	</action-validate>
	
	<action-validate name="action-timesheet-validate-fromDate">
		<error message="Invalid date, it can't be in the future" if="fromDate.isAfter(__date__)" action="action-timesheet-null-fromDate"/>
	</action-validate>
	
	<action-attrs name="action-hr-timesheet-attrs-domain-project">
		<attribute name="domain" for="$project" expr="eval: &quot; ${__user__.id} MEMBER OF self.membersUserSet OR self.assignedTo.id = ${__user__.id} &quot;"/>
	</action-attrs>
	
	<action-attrs name="action-timesheet-attrs-title-project">
		<attribute name="title" for="$project" expr="eval: __config__.app.getApp('project').getProjectLabel()" if="__config__.app.isApp('project') &amp;&amp; !com.google.common.base.Strings.isNullOrEmpty(__config__.app.getApp('project').getProjectLabel())"/>
		<attribute name="title" for="timesheetLineList.project" expr="eval: __config__.app.getApp('project').getProjectLabel()" if="__config__.app.isApp('project') &amp;&amp; !com.google.common.base.Strings.isNullOrEmpty(__config__.app.getApp('project').getProjectLabel())"/>
	</action-attrs>
	
	<action-attrs name="action-timesheet-attrs-domain-timesheet-select">
		<attribute name="domain" for="$timesheetSelect" expr="eval: &quot; self.statusSelect = 1 AND self.user = ${__user__.id} &quot;"/>
	</action-attrs>
	
	<action-attrs name="action-timesheet-attrs-buttons">
		<attribute name="hidden" for="validateButton" expr="eval: !(statusSelect == 2 &amp;&amp; (__user__ == user?.employee?.manager || (__user__ == user &amp;&amp; user?.employee?.manager == null) || __user__.employee?.hrManager))"/>
		<attribute name="hidden" for="cancelButton" expr="eval: !(statusSelect == 1) &amp;&amp; !(statusSelect == 2 &amp;&amp; (__user__ == user?.employee?.manager || (__user__ == user &amp;&amp; user?.employee?.manager == null) || __user__.employee?.hrManager))"/>
		<attribute name="hidden" for="refuseButton" expr="eval: !(statusSelect == 2 &amp;&amp; (__user__ == user?.employee?.manager || (__user__ == user &amp;&amp; user?.employee?.manager == null) || __user__.employee?.hrManager))"/>
		<attribute name="readonly" for="head" expr="eval: (statusSelect == 2 &amp;&amp; !(__user__ == user?.employee?.manager || (__user__ == user &amp;&amp; user?.employee?.manager == null)|| __user__.employee?.hrManager)) || statusSelect &gt; 2"/>
		<attribute name="hidden" for="generateLinesButton" expr="eval: (statusSelect == 2 &amp;&amp; !(__user__ == user?.employee?.manager || (__user__ == user &amp;&amp; user?.employee?.manager == null)|| __user__.employee?.hrManager)) || statusSelect &gt; 2"/>
		<attribute name="hidden" for="getTimeFromTask" expr="eval: (statusSelect == 2 &amp;&amp; !(__user__ == user?.employee?.manager || (__user__ == user &amp;&amp; user?.employee?.manager == null)|| __user__.employee?.hrManager)) || statusSelect &gt; 2"/>
		<attribute name="readonly" for="timesheetLineList" expr="eval: (statusSelect == 2 &amp;&amp; !(__user__ == user?.employee?.manager || (__user__ == user &amp;&amp; user?.employee?.manager == null)|| __user__.employee?.hrManager)) || statusSelect &gt; 2"/>
        <attribute name="hidden" for="timesheetLineList.product" expr="eval: !$showActivity"/>
        <attribute name="hidden" for="$product" expr="eval: !$showActivity"/>
        <attribute name="readonly" for="company" expr="eval: true" if="!__user__.employee?.hrManager"/>
        <attribute name="readonly" for="company" expr="eval: statusSelect &gt; 2" if="__user__.employee?.hrManager"/>
        <attribute name="readonly" for="user" expr="eval: true" if="!__user__.employee?.hrManager"/>
        <attribute name="readonly" for="user" expr="eval: statusSelect &gt; 2" if="__user__.employee?.hrManager"/>
	</action-attrs>
	
	<action-attrs name="action-timesheet-attrs-set-visible-duration-title">
        <attribute name="title" for="timesheetLineList.visibleDuration" expr="eval:user.employee?.timeLoggingPreferenceSelect == 'days' ? com.axelor.i18n.I18n.get('Days') : user.employee?.timeLoggingPreferenceSelect == 'minutes' ? com.axelor.i18n.I18n.get('Minutes') : com.axelor.i18n.I18n.get('Hours')" />
        <attribute name="title" for="panelDashboard" expr="eval:user.employee?.timeLoggingPreferenceSelect == 'days' ? com.axelor.i18n.I18n.get('Total Days in the period') : user.employee?.timeLoggingPreferenceSelect == 'minutes' ? com.axelor.i18n.I18n.get('Total Minutes per Day') : com.axelor.i18n.I18n.get('Total Hours per Day')"/>
	</action-attrs>
	
	<action-attrs name="action-timesheet-attrs-set-log-time-title">
	    <attribute name="title" for="$logTime" expr="eval:user.employee?.timeLoggingPreferenceSelect == 'days' ? com.axelor.i18n.I18n.get('Duration(in day per day)') : user.employee?.timeLoggingPreferenceSelect == 'minutes' ? com.axelor.i18n.I18n.get('Duration(minutes by day)') : com.axelor.i18n.I18n.get('Duration(hours by day)')" />
	</action-attrs>
	
	<action-attrs name="action-timesheet-attrs-generale-lines-panel-hidden-true">
		<attribute name="hidden" for="generateLinesPanel" expr="true"/>
		<attribute name="hidden" for="generateLinesButton" expr="false"/>
	</action-attrs>
	
	<action-attrs name="action-timesheet-attrs-generale-lines-panel-hidden-false">
		<attribute name="hidden" for="generateLinesPanel" expr="false"/>
		<attribute name="hidden" for="generateLinesButton" expr="true"/>
	</action-attrs>
	
	<action-attrs name="action-timesheet-attrs-from-date-on-new">
		<attribute name="readonly" for="fromDate" expr="eval: __repo__(Timesheet).all().filter('self.user = ?1 AND self.statusSelect != ?2 ORDER BY self.toDate DESC', __user__, TimesheetRepository.STATUS_CANCELED).fetchOne() != null"/>
	</action-attrs>
	
	<action-attrs name="action-timesheet-attrs-from-date">
		<attribute name="readonly" for="fromDate" expr="eval: fromDate != null"/>
	</action-attrs>

	<action-attrs name="action-timesheet-attrs-refresh-editor">
		<attribute name="refresh" for="timesheetLineEditor" expr="eval:true" if="showEditor"/>
	</action-attrs>

	<action-attrs name="action-timesheet-attrs-panels">
		<attribute name="hidden" for="actions" expr="eval:id == null" if="__config__.app.getApp('timesheet').getTimesheetEditor()"/>
		<attribute name="hidden" for="lines" expr="eval:id == null" if="__config__.app.getApp('timesheet').getTimesheetEditor()"/>
	</action-attrs>

	<action-attrs name="action-timesheet-set-show-editor">
		<attribute name="value" for="showEditor" expr="eval:true"/>
	</action-attrs>


	<action-attrs name="action-timesheet-attrs-set-user-domain">
		<attribute name="domain" for="user" expr="eval: &quot;self.employee.&quot;"/>
	</action-attrs>

	<action-attrs name="action-timesheet-attrs-enable-timesheet-manuforder">
		<attribute for="$enableTimesheetManufOrder" name="value" expr="eval: __config__.app.getApp('production').getEnableTimesheetOnManufOrder()"/>
	</action-attrs>

	<action-record name="action-timesheet-record-from-period-date" model="com.axelor.apps.hr.db.Timesheet">
