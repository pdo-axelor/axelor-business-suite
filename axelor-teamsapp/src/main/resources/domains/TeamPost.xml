<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.0.xsd">

  <module name="teamsapp" package="com.axelor.apps.teamsapp.db"/>

  <entity name="TeamPost" cachable="true">
	<string name="name" title="Name" />
	<string name="title" title="Title" />
	<string name="content" title="Content" large="true"/>
	<integer name="statusSelect" title="Status" selection="team.post.status.select" default="1"/>   
	<string name="typeSelect" default="discussion" selection="team.post.type.select"/>
	<many-to-one name="parentTeamPost" ref="TeamPost" title="Parent" />
	<many-to-one name="project" ref="com.axelor.apps.project.db.Project" title="Project" />
	<many-to-many name="membersUserSet" ref="com.axelor.auth.db.User" title="Membres"/>
	<track>
		<field name="name" />
		<field name="creationDate" on="CREATE" />
		<field name="confirmationDate" on="UPDATE"/> 
		<message if="true" on="CREATE">Post created</message>
		<message if="true" on ="UPDATE">Post updated</message>
	</track>
  </entity>
  
</domain-models>
