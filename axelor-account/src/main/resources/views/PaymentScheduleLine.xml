<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<grid name="payment-schedule-line-grid" title="Schedule lines"
		model="com.axelor.apps.account.db.PaymentScheduleLine" orderBy="scheduleDate">
		<field name="paymentSchedule" form-view="payment-schedule-form" grid-view="payment-schedule-grid" />
		<field name="scheduleLineSeq" />
		<field name="inTaxAmount" aggregate="sum"/>
		<field name="inTaxAmountPaid" aggregate="sum"/>
		<field name="scheduleDate" />
		<field name="debitBlockingOk" if="__config__.app.getApp('account').getManageDirectDebitPayment()" />
		<field name="rejectDate" if="__config__.app.getApp('account').getManageDirectDebitPayment()" />
		<field name="interbankCodeLine" if="__config__.app.getApp('account').getManageDirectDebitPayment()" form-view="interbank-code-line-form" grid-view="interbank-code-line-grid"/>
		<field name="statusSelect" />
		<field name="debitNumber" if="__config__.app.getApp('account').getManageDirectDebitPayment()" />
		<field name="fromReject" if="__config__.app.getApp('account').getManageDirectDebitPayment()" />
	</grid>

	<form name="payment-schedule-line-form" title="Schedule line"
		model="com.axelor.apps.account.db.PaymentScheduleLine" width="large">
		<panel name="main" >
			<field name="paymentSchedule" form-view="payment-schedule-form" grid-view="payment-schedule-grid" readonly="true" />
			<field name="scheduleLineSeq" />
			<field name="inTaxAmount" readonlyIf="fromReject || statusSelect > 2" />
			<field name="inTaxAmountPaid" readonlyIf="fromReject || statusSelect > 2" />
			<field name="scheduleDate" readonlyIf="statusSelect > 2" />
			<field name="debitBlockingOk" if="__config__.app.getApp('account').getManageDirectDebitPayment()"  />
			<field name="rejectDate" if="__config__.app.getApp('account').getManageDirectDebitPayment()"  />
			<field name="interbankCodeLine" if="__config__.app.getApp('account').getManageDirectDebitPayment()"  form-view="interbank-code-line-form" grid-view="interbank-code-line-grid"/>
			<field name="statusSelect" />
			<field name="debitNumber" if="__config__.app.getApp('account').getManageDirectDebitPayment()" />
			<field name="directDebitManagement" if="__config__.app.getApp('account').getManageDirectDebitPayment()" form-view="direct-debit-management-form-payment-schedule-line" grid-view="direct-debit-management-grid"/>
			<field name="rejectMoveLine" if="__config__.app.getApp('account').getManageDirectDebitPayment()" form-view="move-line-form" grid-view="move-line-grid"/>
			<field name="advanceOrPaymentMove" if="__config__.app.getApp('account').getManageDirectDebitPayment()"  form-view="move-form" grid-view="move-grid"/>
			<field name="advanceMoveLine" if="__config__.app.getApp('account').getManageDirectDebitPayment()"  form-view="move-line-form" grid-view="move-line-grid"/>
			<field name="fromReject" if="__config__.app.getApp('account').getManageDirectDebitPayment()" />
		</panel>
	</form>

	<grid name="payment-schedule-line-payment-schedule-grid" title="Schedule lines"
		model="com.axelor.apps.account.db.PaymentScheduleLine" orderBy="scheduleDate">
		<field name="scheduleLineSeq" />
		<field name="inTaxAmount" aggregate="sum"/>
		<field name="scheduleDate"  />
		<field name="debitBlockingOk" if="__config__.app.getApp('account').getManageDirectDebitPayment()" />
		<field name="rejectDate" if="__config__.app.getApp('account').getManageDirectDebitPayment()" />
		<field name="interbankCodeLine" if="__config__.app.getApp('account').getManageDirectDebitPayment()" form-view="interbank-code-line-form" grid-view="interbank-code-line-grid"/>
		<field name="fromReject" if="__config__.app.getApp('account').getManageDirectDebitPayment()" />
		<field name="statusSelect" />
	</grid>

	<form name="payment-schedule-line-payment-schedule-form" title="Schedule line"
		model="com.axelor.apps.account.db.PaymentScheduleLine" width="large">
		<panel name="main">
			<field name="scheduleLineSeq" />
			<field name="inTaxAmount" readonlyIf="fromReject || statusSelect > 2" />
			<field name="scheduleDate" readonlyIf="statusSelect > 2" />
			<field name="debitBlockingOk" if="__config__.app.getApp('account').getManageDirectDebitPayment()" />
			<field name="rejectDate" if="__config__.app.getApp('account').getManageDirectDebitPayment()" />
			<field name="interbankCodeLine" if="__config__.app.getApp('account').getManageDirectDebitPayment()" form-view="interbank-code-line-form" grid-view="interbank-code-line-grid"/>
			<field name="debitNumber" if="__config__.app.getApp('account').getManageDirectDebitPayment()" />
			<field name="directDebitManagement" if="__config__.app.getApp('account').getManageDirectDebitPayment()" form-view="direct-debit-management-form-payment-schedule-line" grid-view="direct-debit-management-grid"/>
			<field name="rejectMoveLine" if="__config__.app.getApp('account').getManageDirectDebitPayment()" form-view="move-line-form" grid-view="move-line-grid"/>
			<field name="advanceOrPaymentMove" if="__config__.app.getApp('account').getManageDirectDebitPayment()" form-view="move-form" grid-view="move-grid"/>
			<field name="advanceMoveLine" if="__config__.app.getApp('account').getManageDirectDebitPayment()" form-view="move-line-form" grid-view="move-line-grid"/>
			<field name="fromReject" if="__config__.app.getApp('account').getManageDirectDebitPayment()" />
			<field name="statusSelect" readonly="true" />
		</panel>
		
	</form>

	<search-filters name="payment-schedule-line-filters" model="com.axelor.apps.account.db.PaymentScheduleLine" title="Payment schedule line filters">
		<filter title="Payment Schedules Lines">
			<domain>self.paymentSchedule.natureSelect = 0</domain>
		</filter>
		<filter title="Payment Smoothings Lines">
			<domain>self.paymentSchedule.natureSelect = 2</domain>
		</filter>
		<filter title="Rejected Schedule lines">
			<domain>self.rejectDate IS NOT NULL</domain>
		</filter>
		<filter title="Schedule lines created from reject">
			<domain>self.fromReject = true</domain>
		</filter>
	</search-filters>
	
</object-views>