<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

    <form name="sale-order-line-form" id="supplychain-sale-order-line-form" title="SO line"
        model="com.axelor.apps.sale.db.SaleOrderLine" onLoad="action-group-sale-saleorderline-onload,action-sale-order-line-attrs-hidden-fields-for-client"
        onNew="action-group-sale-saleorderline-onnew"
        readonlyIf="saleOrder.statusSelect == 3 &amp;&amp; (!saleOrder.orderBeingEdited || deliveryState > 1) || saleOrder.statusSelect == 4"
        width="large">
        <panel-include view="sale-order-line-form" from="axelor-sale" />
    </form>

	<form name="subscription-sale-order-line-form" title="Subscription" model="com.axelor.apps.sale.db.SaleOrderLine" width="large">
		<panel colSpan="12">
			<field name="periodicity" colSpan="3" onChange="action-supplychain-record-set-dateSubTo, action-supplychain-record-set-subscription-price" readonlyIf="subscriptionList.length > 0"/>
			<field name="fromSubDate" colSpan="3" onChange="action-supplychain-record-set-dateSubTo"/>
			<field name="periodNumber" colSpan="3" onChange="action-supplychain-record-set-dateSubTo"/>
			<field name="toSubDate" readonly="true" colSpan="3"/>
			<field name="subscripInvTypeSelect"/>
			<button colSpan="3" name="generateSubscriptions" title="Generate Subscriptions" onClick="action-supplychain-group-button-generate-subscriptions"/>
			<button name="invoiceSubscription" title="Generate invoice for subscriptions" onClick="save,com.axelor.apps.supplychain.web.SubscriptionController:generateInvoice,save" readonlyIf="id == null || id &lt;= 0" colSpan="3"/>
			<field name="subscriptionList" colSpan="12" form-view="subscription-form" grid-view="subscription-grid" onChange="action-sale-order-line-method-compute"/>
		</panel>
	</form>

	<form name="reserved-qty-sale-order-line-form" title="Change reserved qty"
		  model="com.axelor.apps.sale.db.SaleOrderLine">
        <panel>
			<field name="reservedQty"
				   onChange="action-supplychain-attrs-sale-order-line-max-reserved-qty"/>
			<button name="confirmNewReservation" title="OK"
					onClick="action-method-sale-order-line-change-reserved-qty,close"/>
			<field name="qty" hidden="true"/>
		</panel>
	</form>

	<action-group name="action-supplychain-group-button-generate-subscriptions">
		<action name="save" if="__this__.id &gt; 0"/>
		<action name="com.axelor.apps.supplychain.web.SubscriptionController:generateSubscriptions"/>
		<action name="action-sale-order-line-method-compute"/>
	</action-group>
	
	<action-record name="action-supplychain-record-set-dateSubTo" model="com.axelor.apps.sale.db.SaleOrderLine">
		<field name="toSubDate" expr="eval:fromSubDate.plusMonths(periodicity*periodNumber)" if="periodicity &gt; 0 &amp;&amp; fromSubDate != null &amp;&amp; periodNumber &gt; 0"/>
	</action-record>
	
	<action-record name="action-supplychain-record-set-subscription-price" model="com.axelor.apps.sale.db.SaleOrderLine">
		<field name="price" expr="eval:new BigDecimal((periodicity/product.periodicitySelect)*product.salePrice).setScale(2, BigDecimal.ROUND_HALF_UP)" if="periodicity &gt; 0"/>
	</action-record>
	
	<action-validate name="action-supplychain-validate-generate-all-subscriptions">
		<alert message="Some order lines already contain subscriptions, subscriptions not invoiced will be deleted, do you want to continue?" if="!__repo__(Subscription).all().filter('self.saleOrderLine != null AND self.saleOrderLine.saleOrder.id = ?1',id).fetch().isEmpty()"/>
	</action-validate>

	<action-method name="action-method-sale-order-line-available-stock"
				   model="com.axelor.apps.sale.db.SaleOrderLine">
		<call class="com.axelor.apps.supplychain.web.SaleOrderLineController" method="fillAvailableStock"/>
	</action-method>

	<action-method name="action-method-sale-order-line-change-reserved-qty">
		<call class="com.axelor.apps.supplychain.web.SaleOrderLineController" method="changeReservedQty"/>
	</action-method>

	<action-attrs name="action-supplychain-sale-order-line-attrs-hide-button">
		<attribute for="updateReservedQty" name="hidden" expr="eval: __parent__.statusSelect != 3" if="__parent__"/>
	</action-attrs>

	<action-attrs name="action-supplychain-attrs-sale-order-line-max-reserved-qty">
		<attribute for="reservedQty" name="value" expr="eval: qty" if="reservedQty &gt; qty"/>
	</action-attrs>

	<action-view name="action-view-sale-order-line-reserved-qty-wizard" title="Change reserved qty"
				 model="com.axelor.apps.sale.db.SaleOrderLine">
		<view type="form" name="reserved-qty-sale-order-line-form"/>
		<view-param name="popup" value="reload"/>
		<view-param name="show-toolbar" value="false"/>
		<view-param name="show-confirm" value="false" />
		<view-param name="popup-save" value="false"/>
		<view-param name="forceEdit" value="true"/>
		<context name="_showRecord" expr="eval: id"/>
	</action-view>
</object-views>	